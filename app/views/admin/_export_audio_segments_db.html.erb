<%= form_with url: export_sqlite_db_cms_recitations_path, method: :put do |form| %>
  <fieldset class="download-form">
    <ol>
      <li class="text input required">
        <label for="file_name">DB File name</label>
        <input type="text" name="file_name" id="file_name" placeholder="file name" value="reciter-audio-timing.sqlite">
      </li>

      <li class="text input required">
        <label for="file_name">Table name</label>
        <input type="text" name="table_name" id="table_name" placeholder="table name" value="ayah_timing">
      </li>

      <li>
        <label for="export_gapless">Export gapless audio segments</label>
        <%= form.check_box :export_gapless %>
      </li>

      <li class="searchable_select input optional">
        <label for="file_name">Select reciters</label>
        <select name="reciter_ids" id=reciter_ids multiple data-controller="select2">
          <option value="tarteel-reciters">All Tarteel reciters</option>
          <% Recitation.approved.find_each do |recitation| %>
            <option value="<%= recitation.id %>">
              <%= recitation.humanize %>
            </option>
          <% end %>
        </select>
      </li>
    </ol>
  </fieldset>

  <%= submit_tag 'Export!', data: { disable_with: 'Please wait...' } %>
<% end %>