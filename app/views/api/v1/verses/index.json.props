locals = {
 extra_fields: @presenter.allowed_extra_fields,
 words: @presenter.include_words?,
 word_fields: ['text_uthmani']
}

json.verses do
   json.array! @presenter.verses, partial: ['verse', locals: locals, as: 'verse']
end

pagination = @presenter.pagination

json.pagination do
  json.current_page  pagination.page
  json.next_page     pagination.next
  json.per_page      pagination.items
  json.total_pages   pagination.pages
  json.total_count   pagination.count
end
