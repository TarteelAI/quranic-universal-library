      <li class="nav-item" role="presentation">
        <button class="nav-link" id="translations-tab" data-bs-target="#translations" data-action="click->tabs#showTab" data-tabs-target="tab" type="button" role="tab" aria-controls="translations" aria-selected="false">Translations</button>
