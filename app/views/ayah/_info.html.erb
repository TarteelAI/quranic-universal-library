  <div data-controller="tabs">
    <ul class="nav nav-tabs nav-tabs-clean" id="ayahTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="ayah-tab" data-bs-target="#ayah" data-action="click->tabs#showTab" data-tabs-target="tab" type="button" role="tab" aria-controls="ayah" aria-selected="true">Ayah</button>
