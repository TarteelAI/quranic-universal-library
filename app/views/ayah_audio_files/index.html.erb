<%
  recitations = Recitation.all.map do |a|
    [a.humanize, a.id]
  end
%>

<%= render 'tools/header',
           name: 'Ayah recitations',
           title: @recitation.humanize,
           key: 'ayah_recitation'
%>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="page-section filters">
    <%= form_tag ayah_audio_files_path, method: :get do %>
      <div data-controller="chapter-verses-filter" class="tw-flex tw-flex-wrap">
        <%= render 'shared/filters' %>

        <div class="tw-mb-4 tw-me-2">
          <%= select_tag :id, options_for_select(recitations, params[:id]), class: 'form-select tw-w-[85vw] sm:tw-w-[200px]', data: { controller: 'select2' } %>
          <p class="tw-text-sm tw-text-gray-600 tw-mt-1">Filter reciter</p>
        </div>

        <div class="tw-mb-4">
          <%= submit_tag 'Filter', class: 'btn btn-success', data: { disable_with: 'Please wait..' } %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="page-section tw-mt-4">
    <h2 class="tw-text-2xl tw-mb-4">Ayah segments</h2>
    <div class="tools-table-overflow">
    <table class="tw-w-full hover:tw-bg-gray-50">
      <thead class="tw-sticky tw-top-0 tw-z-10 tw-bg-white tw-border-b-2 tw-border-black">
      <tr>
        <th><%= sort_order_link 'Id', :id, id: @recitation.id %></th>
        <th><%= sort_order_link 'Surah', :chapter_id %></th>
        <th><%= sort_order_link 'Ayah', :verse_number %></th>
        <th>Segment Progress</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @audio_files.each do |file| %>
        <tr class="hover:tw-bg-gray-200 tw-border-b">
          <th scope="row" class="tw-py-2 tw-pl-2"><%= file.id %></th>
          <th scope="row" class="tw-py-2"><%= file.chapter_id %></th>
          <th scope="row" class="tw-py-2"><%= file.verse_number %></th>

          <td class="tw-py-2">
            <% progress = file.segment_progress %>

            <div class="tw-w-full tw-bg-gray-200 tw-rounded-full tw-h-6">
              <div class="tw-h-6 tw-rounded-full tw-text-white tw-text-xs tw-flex tw-items-center tw-justify-center tw-transition-all tw-duration-300 tw-bg-green-500"
                   role="progressbar"
                   aria-valuenow="<%= progress %>"
                   aria-valuemin="0" aria-valuemax="100"
                   style="width: <%= progress %>%; min-width: 30px">
                <%= progress %>%
              </div>
            </div>
          </td>

          <td class="tw-py-2">
            <div class="tw-flex tw-gap-1">
              <%= link_to 'Show', ayah_audio_file_path(@recitation.id, chapter_id: file.chapter_id), class: 'btn btn-success' %>
              <%= link_to 'Fix Segments', segment_builder_ayah_audio_file_path(@recitation.id, chapter_id: file.chapter_id, verse: file.verse_number), class: 'btn btn-success' %>
            </div>
          </td>
        </tr>
      <% end %>

      <tr>
        <td colspan="5">
          <div class="tw-flex tw-items-center">
            <div class="tw-me-4">
              <%= safe_html pagy_bootstrap_nav(@pagy) %>
            </div>
            <div>
              <%= safe_html pagy_info(@pagy) %>
            </div>
          </div>
        </td>
      </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>


