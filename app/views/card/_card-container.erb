<%
  search_data = local_assigns[:search_data]
  pattern = local_assigns[:patterns]&.sample
  is_link = card.respond_to?(:url) && card.url.present?
  tag_name = is_link ? :a : :div
  href_attr = is_link ? { href: card.url } : {}
  card_type = card.respond_to?(:type) ? card.type : ''
%>
<%= content_tag tag_name, class: "tw-w-full tw-inline-block", **href_attr, data: { search: search_data } do %>
  <div class="<%= class_names('tw-relative tw-rounded-[45px] tw-h-[450px] md:tw-h-[550px] tool-card-with-bg tw-px-8 tw-py-6 tw-relative', card_type, "pattern#{pattern}") %>" data-search='<%= search_data %>'>
    <div class="overlay"></div>
    <%= yield %>
  </div>
<% end %>
