<%
  selected_font = get_quran_script_font_family(params[:script], Verse.first)
%>
<div class="tw-flex tw-flex-wrap tw-gap-4 my-4 sticky">
  <div class="tw-w-full">
    <div class="tw-flex flex-column tw-mb-4">
      <div>
        Font size:(<span id="font-size"></span>)
        <input type="range" min="15" max="100" value="28" class="font-size-slider">
      </div>

      <div id=font-switcher>
        <label for="font-switcher">
          Change font
        </label>


        <%= select_tag :change_font, options_for_select(all_quran_fonts, selected_font),class: "tw-w-[100%] tw-border-gray-400 tw-rounded-[5px] tw-h-[38px]"%>
      </div>
    </div>
  </div>
</div>
