  let currentlyPlaying = null;
  let sortColumn = null; // 'ayah', 'duration', null
  let sortOrder = 'none'; // 'none', 'asc', 'desc'

  // Audio seek control variables
  let currentSegmentStart = 0;
  let currentSegmentEnd = 0;
