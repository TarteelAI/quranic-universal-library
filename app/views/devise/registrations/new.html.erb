<%= render 'layouts/grid' do %>
  <div class="px-4">
    <div class="row device-container">
      <%= render 'devise/shared/spline_animation' %>
      <div class="col-md-6 col-12 right">
        <div class="py-3 px-md-4">
          <ul class="nav nav-tabs nav-tabs-clean" role="tablist">
            <li class="nav-item">
              <a class="nav-link text-dark" href="<%= new_user_session_path %>">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark active" href="<%= new_user_registration_path %>" role="tab">Signup</a>
            </li>
          </ul>
          <div class="tab-content py-3" data-turbo="false">
            <div class="tab-pane active show"
               id="tab-signup" role="tabpanel"
               aria-labelledby="tab-signup">
              <%= render 'form' %>
            </div>
          </div>
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
