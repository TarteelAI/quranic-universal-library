<h2 class="mb-3">Salam! Letâ€™s get you logged in.</h2>
<p>
  Login using your <strong>Email</strong> credentials.
</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: 'inputs_container', data: { controller: 'remote-form' } }) do |f| %>
  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, required: true, class: 'form-control', placeholder: 'Enter your email' %>
    <%= f.label :email, required: true %>

    <div class="invalid-feedback">
      Please enter a valid email
    </div>
  </div>

  <div class="form-floating mb-3 password">
    <%= f.password_field :password, class: 'form-control', placeholder: 'enter your password', required: true, minlength: 6, data: {controller: 'toggle-password' } %>
    <%= f.label :password, required: true %>

    <div class="invalid-feedback">
      Password does not meet minimum security requirements.
    </div>
  </div>

  <div class="d-flex justify-content-between flex-column flex-md-row">
    <div class="checkbox mb-2">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %> Remember me
      <% end %>
    </div>

    <div>
      <%= link_to 'Forgot your password?', new_user_password_path, class: 'text-dark btn-link' %>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit t('.sign_in', default: 'Sign in'), class: 'btn btn-dark btn-rounded mt-2 px-8 py-3' %>
  </div>
<% end %>
