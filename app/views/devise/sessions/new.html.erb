<% if params[:modal] == 'true' || local_assigns[:modal] || session.delete(:use_modal) %>
  <div id="title">
    You need to sign in or sign up before continuing.
  </div>

  <div id="body">
    <div class="modal-body" data-turbo="false">
      <%= render 'form' %>

      <%= render 'devise/shared/links' %>
      <p class="mt-2">
        Donâ€™t have an account?
        <%= link_to 'Create Account', new_user_registration_path, class: 'text-dark' %>
      </p>
    </div>
  </div>
<% else %>
  <div class="container-lg px-4">
    <div class="row device-container">
      <%= render 'devise/shared/spline_animation' %>

      <div class="col-md-6 col-12 right">
        <div class="py-3 px-md-4">
          <ul class="nav nav-tabs nav-tabs-clean" role="tablist">
            <li class="nav-item">
              <a class="nav-link text-dark active" href="<%= new_user_session_path %>">Login</a>
            </li>

            <li class="nav-item">
              <a class="nav-link text-dark"  href="<%= new_user_registration_path %>">Signup</a>
            </li>
          </ul>

          <div class="tab-content py-3" data-turbo="false">
            <div class="tab-pane fade active show"
                 id="tab-login"
                 role="tabpanel"
                 aria-labelledby="tab-login">
              <%= render 'form' %>
            </div>
          </div>

          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

