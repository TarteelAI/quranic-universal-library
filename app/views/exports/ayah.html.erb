<%= content_for :heading do %>
  <%= render 'shared/page_font', verses: [@verse] %>
<% end %>

<%
  font_family = get_quran_script_font_family(params[:script], @verse)
  font_size = params[:font_size]
%>

<div id="content"
     data-file-name="ayah/<%= params[:script] %>/<%=@verse.chapter_id %>/<%=@verse.verse_number %>"
     class="<%=font_family %> <%= params[:css_class] %>"
     style="font-size: <%=font_size %>px;line-height: normal!important;">
  <%= safe_html @verse.read_attribute(params[:script]) %>
</div>

<style>
    #content{
        direction: rtl;
        text-align: right;
    }
</style>