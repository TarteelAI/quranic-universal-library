        <div class="tw-mt-20">
          <div class="tw-text-xs tw-font-bold tw-text-gray-400">A PROJECT BY</div>
          <a href="https://www.tarteel.ai/" target="_blank" class="tw-inline-block tw-invert tw-w-32 tw-mt-2 tw-contrast-100">
            <%= image_tag asset_path('logotype.svg'), alt: 'Tarteel Logotype' %>
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>