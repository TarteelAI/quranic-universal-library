<div class="tw--ms-14">
  <%= render 'layouts/grid' do %>
    <div class="tw-py-4 md:tw-py-8">
      <div>
        <div class="tw-flex tw-justify-between">
          <div>
            <svg class="tw-w-[67px] tw-h-[66px]" viewBox="0 0 67 66" fill="none" xmlns="http://www.w3.org/2000/svg">
              <!-- SVG content -->
            </svg>
            <!-- QUL Logo -->
            <div class="tw-flex tw-justify-between tw-mt-2">
              <div class="tw-ms-1 tw-text-sm tw-text-gray-400 tw-leading-tight tw-shadow-md tw-flex tw-flex-col">
                <span>Quranic</span>
                <span>Universal</span>
                <span>Library</span>
              </div>
            </div>
          </div>
          <div class="tw-flex tw-flex-col tw-items-center tw-z-10">
            <svg class="tw-w-[73px] tw-h-[60px]" viewBox="0 0 73 60" fill="none" xmlns="http://www.w3.org/2000/svg">
