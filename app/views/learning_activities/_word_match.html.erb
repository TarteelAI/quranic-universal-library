<%
  data = generate_word_match_quiz
  pairs = data[:pairs]
  left_words = data[:left_words]
  right_translations = data[:right_translations]
%>

<div class="quiz tw-p-4 rounded-3 word-match" data-controller="activities--word-match">
  <div class="tw-px-4 tw-py-3 tw-rounded tw-mb-4 tw-bg-blue-100 tw-border tw-border-blue-400 tw-text-blue-700 tw-flex tw-items-center tw-gap-2">
    <span class="fw-semibold">How to play:</span>
    <span>Click a black dot to start a line and connect it to the matching dot.</span>
  </div>

  <div class="tw-flex flex-column flex-md-row tw-gap-5 tw-relative" id="match-area">
    <!-- Arabic Column -->
    <div class="flex-fill">
      <h3 class="tw-mb-3 tw-text-blue-600 tw-text-center tw-text-xl">Arabic</h3>
      <div class="list-group tw-border tw-border-gray-300 tw-rounded tw-shadow-sm" id="left-column">
        <% left_words.each do |w| %>
          <div class="list-group-item tw-flex tw-items-center tw-justify-between qpc-hafs rounded-2 tw-mb-2 border-0 tw-shadow-sm"
               data-id="<%= w[:id] %>">
            <div class="tw-flex tw-items-center">
              <span class="anchor-dot tw-ms-3 tw-bg-gray-600 rounded-circle" data-side="left"></span>
              <span class="qpc-hafs fs-5 fw-semibold"><%= w[:text] %></span>
            </div>
            <div class="tw-flex tw-items-center tw-gap-2"><span class="status-icon"></span></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Translation Column -->
    <div class="flex-fill">
      <h5 class="tw-mb-3 tw-text-green-600 tw-text-center tw-text-xl">Translations</h5>
      <div class="list-group tw-border tw-border-gray-300 tw-rounded tw-shadow-sm" id="right-column">
        <% right_translations.each do |t| %>
          <div class="list-group-item tw-flex tw-items-center tw-justify-between rounded-2 tw-mb-2 border-0 tw-shadow-sm"
               data-id="<%= t[:id] %>">
            <div class="tw-flex tw-items-center">
              <span class="anchor-dot tw-me-3 tw-bg-gray-600 rounded-circle" data-side="right"></span>
              <span class="fs-6"><%= t[:text] %></span>
            </div>
            <div class="tw-flex tw-items-center tw-gap-2"><span class="status-icon"></span></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- SVG overlay for connections -->
    <svg id="match-svg" class="tw-absolute top-0 start-0 tw-w-full tw-h-full"></svg>
  </div>

  <!-- Progress -->
  <div class="tw-mt-3">
    <div class="tw-w-full tw-bg-gray-200 tw-rounded-full tw-h-6 progress-thin">
      <div id="progress-bar" class="tw-h-6 tw-rounded-full tw-text-white tw-text-xs tw-flex tw-items-center tw-justify-center tw-transition-all tw-duration-300 tw-bg-green-500" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>
</div>
