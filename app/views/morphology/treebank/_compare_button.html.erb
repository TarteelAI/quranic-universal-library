<%= turbo_frame_tag "treebank_compare_button", class: "tw-inline-block" do %>
  <% if @compare_mode %>
    <%= link_to morphology_treebank_index_path(locale: @locale, chapter_number: @chapter_number, verse_number: @verse_number, graph_number: @graph_number),
                class: "tw-inline-flex tw-items-center tw-justify-center tw-px-3 tw-py-1.5 tw-bg-red-600 tw-text-white tw-rounded tw-text-sm hover:tw-bg-red-700",
                data: { turbo_stream: true, controller: "tooltip" },
                title: "Close compare" do %>
      <i class="fa fa-times"></i>
    <% end %>
  <% else %>
    <%= link_to morphology_treebank_index_path(locale: @locale, chapter_number: @chapter_number, verse_number: @verse_number, graph_number: @graph_number, compare: 1),
                class: "tw-inline-flex tw-items-center tw-justify-center tw-px-3 tw-py-1.5 tw-bg-blue-600 tw-text-white tw-rounded tw-text-sm hover:tw-bg-blue-700",
                data: { turbo_stream: true, controller: "tooltip" },
                title: "Compare (side-by-side)" do %>
      <i class="fa fa-columns"></i>
    <% end %>
  <% end %>
<% end %>


