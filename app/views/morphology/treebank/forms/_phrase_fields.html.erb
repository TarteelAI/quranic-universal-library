<div class="tw-grid tw-grid-cols-3 tw-gap-2 tw-tw-mb-2">
  <div>
    <label class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">POS:</label>
    <%= text_field_tag field_name_prefix + "[phrase_pos]", 
                       phrase_pos,
                       class: 'tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md tw-focus:tw-outline-none tw-focus:tw-ring-2 tw-focus:tw-ring-blue-500 tw-focus:tw-border-transparent tw-text-sm phrase-pos-input',
                       placeholder: 'e.g., PP',
                       data: { node_id: node_id, action: 'input->graph-bulk-edit#updatePhraseValue' } %>
  </div>
  <div>
    <label class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">Source:</label>
    <%= select_tag field_name_prefix + "[phrase_source]",
                   options_for_select(available_node_numbers, phrase_source),
                   { include_blank: 'Select', 
                     class: 'tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md tw-focus:tw-outline-none tw-focus:tw-ring-2 tw-focus:tw-ring-blue-500 tw-focus:tw-border-transparent tw-text-sm phrase-source-select',
                     data: { node_id: node_id, action: 'change->graph-bulk-edit#updatePhraseValue' } } %>
  </div>
  <div>
    <label class="tw-block tw-text-sm tw-font-medium tw-text-gray-700 tw-mb-1">Target:</label>
    <%= select_tag field_name_prefix + "[phrase_target]",
                   options_for_select(available_node_numbers, phrase_target),
                   { include_blank: 'Select', 
                     class: 'tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md tw-focus:tw-outline-none tw-focus:tw-ring-2 tw-focus:tw-ring-blue-500 tw-focus:tw-border-transparent tw-text-sm phrase-target-select',
                     data: { node_id: node_id, action: 'change->graph-bulk-edit#updatePhraseValue' } } %>
  </div>
</div>
<%= hidden_field_tag field_name_prefix + "[value]", value, class: 'phrase-value-field' %>
<%= hidden_field_tag field_name_prefix + "[pos]", phrase_pos, class: 'phrase-pos-field' %>
