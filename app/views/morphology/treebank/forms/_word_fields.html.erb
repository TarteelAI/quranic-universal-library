<%
  field_name_prefix = "nodes[#{node_id}]"
  resource_id ||= nil
  segment_id ||= nil
%>
<div class="resource-dropdowns d-flex gap-2" data-node-id="<%= node_id %>">
  <div class="mb-2 w-50">
    <label class="form-label small mb-1">Word:</label>
    <%= select_tag field_name_prefix + "[resource_id]",
                   options_for_select(presenter.available_words, resource_id),
                   { include_blank: 'Select Word', 
                     class: 'form-select form-select-sm',
                     data: { 
                       controller: 'select2',
                       node_id: node_id, 
                       field: 'resource_id', 
                       action: 'change->graph-bulk-edit#saveNodeField' 
                     } } %>
  </div>
  <div class="w-50">
    <label class="form-label small mb-1">Segment:</label>
    <%= select_tag field_name_prefix + "[segment_id]",
                   options_for_select(presenter.available_segments, segment_id),
                   { include_blank: 'None', 
                     class: 'form-select form-select-sm',
                     data: { 
                       controller: 'select2',
                       node_id: node_id, 
                       field: 'segment_id', 
                       action: 'change->graph-bulk-edit#saveNodeField' 
                     } } %>
  </div>
</div>
