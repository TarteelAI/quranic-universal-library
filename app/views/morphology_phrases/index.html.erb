<%
  actions = []

  if @access
    actions << link_to('New Phrase', new_morphology_phrase_path, class: 'btn btn-success', data: { controller: 'ajax-modal', url: new_morphology_phrase_path(modal: true) })
    actions << link_to('View bookmarks', '#_', class: 'btn btn-info', data: { controller: 'phrase-ayah-bookmark' })
  end

  if params[:proofread]
    actions << link_to('Phrase view', morphology_phrases_path, class: 'btn btn-info')
  else
    actions << link_to('Proofread view', morphology_phrases_path(proofread: true), class: 'btn btn-info')
  end
%>

<%= render 'tools/header', name: 'Mutashabihat ul Quran', actions: actions, key: 'mutashabihat' %>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <% if params[:proofread] %>
    <%= render 'proofread_list' %>
  <% else %>
    <%= render 'phrase_list' %>
  <% end %>
</div>
