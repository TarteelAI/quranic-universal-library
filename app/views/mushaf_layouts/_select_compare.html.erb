<%
  mushaf = @presenter.mushaf
  resource = @presenter.resource
%>

<div id=title>
  Select mushaf to compare with <%= resource.name %>
</div>

<div id=body>
  <div class="tw-p-6">
    <ul class="list-group">
      <% Mushaf.where.not(id: mushaf.id).each do |compare| %>
        <li class="list-group-item">
          <%= link_to compare.name, mushaf_layout_path(mushaf.id, compare: compare.id, page_number: params[:page_number], view_type: 'compare') %>
        </li>
    <% end %>
    </ul>
  </div>

  <div class="tw-flex tw-items-center tw-justify-end tw-p-6 tw-border-t tw-border-gray-200 tw-space-x-2">
    <button type="button" class="tw-px-4 tw-py-2 tw-rounded tw-font-medium tw-transition-colors btn-default" data-dismiss="modal">Close</button>
  </div>
</div>