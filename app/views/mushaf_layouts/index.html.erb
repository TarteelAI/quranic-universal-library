<div class="page-wrapper container-lg transliteration">
  <h1 class="page-header">
    <%= @resource ? @resource.name : 'Select Mushaf' %>
  </h1>

  <figure class="highlight mt-4">
    <table class="table table-hover mt-4">
      <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Pages</th>
        <th>Lines per page</th>
        <th>Font</th>
        <th>Qirat</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% Mushaf.find_each do |m| %>
        <tr>
          <td>
            <%= link_to m.id, mushaf_layout_path(m.id) %>
          </td>
          <td><%= m.name %></td>
          <td><%= m.pages_count %></td>
          <td><%= m.lines_per_page %></td>
          <td><%= m.default_font_name %></td>
          <td><%= m.qirat_type&.name %></td>
          <td>
            <%= link_to 'Proofread', mushaf_layout_path(m.id, source_pdf: true), class: 'mr-2 btn btn-warning btn-sm' %>
            <%= link_to 'Fix line align', mushaf_layout_path(m.id, page_alignment: true), class: 'btn btn-warning btn-sm' %>

          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </figure>
</div>


