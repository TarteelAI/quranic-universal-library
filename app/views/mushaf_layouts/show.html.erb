<%= render 'tools/header',
           name: 'Mushaf layouts',
           key: 'mushaf_layouts',
           help: 'mushaf_layout'
%>

<%= render 'shared/access_message' %>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="page-section">
    <div class="tw-mb-6">
      <h2 class="tw-text-2xl tw-font-semibold tw-mb-3"><%= @mushaf.name %></h2>
      <p class="tw-text-gray-600 tw-text-base">
        <%= @mushaf.name %> contains <strong><%= @mushaf.pages_count %></strong> pages with <strong><%= @mushaf.lines_per_page %></strong> lines per page. 
        For more information about working with Mushaf layouts, click on the Help button above. 
        Below is the complete list of all pages.
      </p>
    </div>

    <div class="tw-sticky tw-top-0 tw-z-20 tw-bg-white tw-pb-4 tw-mb-4 tw-border-b tw-border-gray-200">
      <%= form_with url: mushaf_layout_path(@mushaf.id), method: :get, data: { turbo_frame: 'pages_table' }, class: '' do |f| %>
        <div class="tw-flex tw-gap-2">
          <%= f.search_field :search, 
              value: params[:search],
              placeholder: "Search by page number or ayah (e.g., 20 or 2:5)...",
              class: "form-control tw-flex-1 tw-px-4 tw-py-2 tw-border tw-border-gray-300 tw-rounded-lg focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" %>
          <%= f.hidden_field :sort_key, value: params[:sort_key] %>
          <%= f.hidden_field :sort_order, value: params[:sort_order] %>
          <%= f.submit 'Search', class: 'btn btn-primary' %>
          <% if params[:search].present? %>
            <%= link_to 'Clear', mushaf_layout_path(@mushaf.id, sort_key: params[:sort_key], sort_order: params[:sort_order]), class: 'btn btn-secondary', data: { turbo_frame: 'pages_table' } %>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <%= turbo_frame_tag "pages_table" do %>
      <div class="tools-table-overflow">
        <table class="tw-w-full hover:tw-bg-gray-50">
          <thead class="tw-sticky tw-z-10 tw-bg-white tw-border-b-2 tw-border-black" style="top: 42px;">
            <tr>
            <th class="tw-py-3 tw-px-4 tw-text-left">
              <%= sort_order_link 'Page #', :page_number, {}, { data: { turbo_frame: 'pages_table' } } %>
            </th>
              <th class="tw-py-3 tw-px-4 tw-text-left">Ayah Range</th>
              <th class="tw-py-3 tw-px-4 tw-text-left">Status</th>
              <th class="tw-py-3 tw-px-4 tw-text-left">Actions</th>
            </tr>
          </thead>
          
        <tbody>
          <% @pages.each do |page| %>
            <%= render 'page_row', page: page %>
          <% end %>
        </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
