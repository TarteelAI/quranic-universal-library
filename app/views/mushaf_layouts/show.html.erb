<% page_number = @mushaf_page.page_number %>

<%= render 'shared/access_message' %>

<div class="page-wrapper">
  <h4 class="page-header flex-between">
    <div class="flex-grow-1">
      <%= @mushaf.name %>
      <br/>
      <small style="font-size: 0.5em">
        (Page: <%= page_number %> Ayahs: <%= @mushaf_page.first_ayah_key %>
        - <%= @mushaf_page.last_ayah_key %>)
      </small>
    </div>

    <div>
      <%= link_to 'Update pages', mushaf_layout_path(@mushaf.id, mapping: true), class: 'btn btn-info' if @access %>
      <%= link_to 'Update words', edit_mushaf_layout_path(@mushaf.id, page_number: page_number), class: 'btn btn-info' if @access %>

      <%= link_to 'Previous Page', mushaf_layout_path(@mushaf.id, compare: @compared_mushaf&.id, page_number: page_number - 1, source_pdf: params[:source_pdf], page_alignment: params[:page_alignment], mushtabiat: params[:mushtabiat]), class: 'btn btn-dark' %>
      <%= link_to 'Next page', mushaf_layout_path(@mushaf.id, compare: @compared_mushaf&.id, page_number: page_number + 1, source_pdf: params[:source_pdf], page_alignment: params[:page_alignment], mushtabiat: params[:mushtabiat]), class: 'btn btn-dark' %>

      <%= link_to 'Back to filter', mushaf_layouts_path, class: 'btn btn-primary' %>
    </div>
  </h4>

  <% if params[:mapping] || @mushaf_page.blank? || @mushaf_page.first_verse_id.blank? || @mushaf_page.last_verse_id.blank? %>
    <%= render 'page_mapping_with_pdf' %>
  <% else %>
    <%= turbo_frame_tag "page-preview" do %>
      <%= render params[:page_alignment] == 'true' ? 'page_line_alignment' : 'preview' %>
    <% end %>
  <% end %>
</div>

