<div class="d-flex align-items-center justify-content-center mt-4 flex-column flex-md-row gap-4">
  <% featured_downlodable_resource_cards.each do |card| %>
    <div class="featured-resource-card <%= card.type %>" data-search="<%= card.type %> <%= card.title.downcase %> <%= card.description.to_s.downcase %>" >
      <div class="p-4 h-100 d-flex flex-column justify-content-between">
        <h3>
          <%= link_to card.title, card.url, class: 'text-white btn-link' %>
        </h3>

        <p class="text-white fw-bold">
          <%= card.description %>
        </p>

        <div class="w-100 d-flex align-items-center justify-content-center">
          <%= image_tag "landing/#{card.icon}" %>
        </div>

        <div class="d-flex align-items-center justify-content-between">
          <div class="text-white fw-bold">
            <%= card.stats.html_safe %>
          </div>

          <div class="featured-count-badge">
            <%= card.count %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
