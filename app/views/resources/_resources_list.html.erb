<div class="resources-list">
  <div class="tw-flex tw-items-start md:tw-items-center tw-gap-3 tw-flex-col md:tw-flex-row tw-justify-between">
    <h2 class="tw-pb-3 tw-text-2xl md:tw-text-3xl tw-font-light">Available Resources</h2>
    <% if false %>
      <div class="d-flex align-items-center justify-content-center gap-3 gap-md-4">
        <button class="btn border">
          <svg width="24" height="23" viewBox="0 0 24 23" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M10.3333 16.3889H13.6667V14.7222H10.3333V16.3889ZM4.5 6.38892V8.05558H19.5V6.38892H4.5ZM7 12.2222H17V10.5556H7V12.2222Z" fill="#525866"/>
          </svg>
          Filter
        </button>
        <div class="dropdown">
          <button class="btn border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <svg width="18" height="15" viewBox="0 0 18 15" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15.1111 0.722168V10.7222H17.6111L14.2777 14.8888L10.9444 10.7222H13.4444V0.722168H15.1111ZM8.4444 12.3888V14.0555H0.944397V12.3888H8.4444ZM10.1111 6.5555V8.22217H0.944397V6.5555H10.1111ZM10.1111 0.722168V2.38883H0.944397V0.722168H10.1111Z" fill="#99A0AE"/>
            </svg>
            Sort by
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Action</a></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
  <div id="empty-results-message" class="tw-hidden tw-mt-4 tw-rounded-lg tw-text-2xl tw-text-gray-500">
    <p>No results found</p>
  </div>
  <%= render 'featured_cards' %>
  <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-2 lg:tw-grid-cols-3 tw-gap-4 tw-mt-4">
    <% downloadable_resource_cards.each do |card| %>
      <%= render 'card/card-container', url: card.url, type: card.type do %>
        <div class="tw-p-3 tw-gap-4 tw-h-full tw-flex tw-flex-col tw-justify-between" data-search="<%= card.type %> <%= card.title.downcase %> <%= card.description.to_s.downcase %>">
          <div class="tw-flex tw-flex-col tw-gap-2">
            <%= render 'card/card-title', title: card.title %>
            <%= render 'card/card-description', description: card.description %>
          </div>
          <div class="icon">
            <%= image_tag "card-icon/#{card.icon}" %>
          </div>
          <div class="tw-flex tw-items-center tw-justify-between">
            <% if card.count.to_i > 0 %>
              <div class="tw-text-white tw-font-bold">
                <%= card.stats.to_s.html_safe %>
              </div>
              <div class="tw-rounded-full tw-bg-[#E0FAEC] tw-text-[#099a4d] tw-font-bold tw-text-sm tw-px-3 tw-py-1 tw-border-2 tw-border-[#56B599]">
                <%= card.count %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
