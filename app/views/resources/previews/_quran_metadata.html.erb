<%
  resource_content = resource.resource_content
  partial_name = resource_content.name.downcase.gsub('name', '').strip
%>

<div class="tw-mt-5">
  <ul class="nav nav-tabs" id="translation-docs-tab" role="tablist">
    <li class="tw-m-0" role="presentation">
      <button class="tw-text-gray-700 tw-font-medium tw-no-underline tw-px-3 tw-py-2 tw-rounded hover:tw-bg-gray-200 active"
              id="tab-docs"
              data-bs-toggle="tab"
              data-bs-target="#tab-preview-pane"
              type="button"
              role="tab"
              aria-controls="tab-preview-pane"
              aria-selected="true">
        <%= resource.name %> Preview
      </button>
    </li>

    <li class="tw-m-0" role="presentation">
      <button class="tw-text-gray-700 tw-font-medium tw-no-underline tw-px-3 tw-py-2 tw-rounded hover:tw-bg-gray-200"
              id="tab-help"
              data-bs-toggle="tab"
              data-bs-target="#tab-help-pane"
              type="button" role="tab"
              aria-controls="tab-help-pane"
              aria-selected="false">
        Help
      </button>
    </li>
  </ul>

  <div class="tab-content tw-p-2 tw-mt-3" id="translation-docs-tab-content">
    <div class="tab-pane show active"
         id="tab-preview-pane"
         role="tabpanel"
         aria-labelledby="tab-docs" tabindex="0">
      <div class="tw-space-y-6">
        <%= render "resources/previews/quran_metadata/#{partial_name}_preview", resource: resource %>
      </div>
    </div>

    <div class="tab-pane"
         id="tab-help-pane"
         role="tabpanel"
         aria-labelledby="tab-docs" tabindex="1">
      <div class="tw-space-y-6">
        <%= render "resources/previews/quran_metadata/#{partial_name}_help", resource: resource %>
      </div>
    </div>
  </div>
</div>
