<% if resource.one_word? %>
  <%= render 'resources/previews/word_translation',  resource: resource %>
<% else %>
  <%= render 'resources/previews/verse_translation', resource: resource %>
<% end %>

<script>
  function jumpToAyah(selectAyah) {
    const currentUrl = new URL(window.location.href);
    currentUrl.searchParams.set("ayah", selectAyah);
    Turbo.visit(currentUrl.toString());
  }
</script>















