<%
  id = (params[:hizb].presence || 1).to_i.abs
  hizb = Hizb.find_by(hizb_number: id) || Hizb.first
%>

<div class="tw-flex tw-flex-wrap tw-items-center tw-justify-center tw-gap-4 tw-mb-6">
  <div class="tw-flex tw-items-center">
    <%= label_tag :hizb, 'Jump to Rub el Hizb', class: 'tw-me-2 tw-font-medium' %>
    <%= select_tag :hizb,
                   options_for_select((1..60).to_a, hizb.hizb_number),
                   onchange: "jumpToHizb(this.value)",
                   class: "tw-px-3 tw-py-2 tw-border tw-rounded tw-bg-white tw-shadow-sm",
                   style: 'min-width: 220px',
                   data: { controller: 'select2' } %>
  </div>

  <div class="tw-flex tw-gap-2">
    <% if hizb.hizb_number > 1 %>
      <%= link_to detail_resources_path('quran-metadata', resource.id, hizb: hizb.hizb_number - 1), class: 'tw-bg-gray-200 hover:tw-bg-gray-300 tw-px-4 tw-py-2 tw-rounded tw-text-sm tw-shadow-sm' do %>
        ← Previous
      <% end %>
    <% end %>

    <% if hizb.hizb_number < 60 %>
      <%= link_to detail_resources_path('quran-metadata', resource.id, hizb: hizb.hizb_number + 1), class: 'tw-bg-gray-200 hover:tw-bg-gray-300 tw-px-4 tw-py-2 tw-rounded tw-text-sm tw-shadow-sm' do %>
        Next →
      <% end %>
    <% end %>
  </div>
</div>

<div class="tw-p-6 tw-rounded-xl tw-bg-white tw-shadow">
  <div class="tw-mb-4">
    <h1 class="tw-text-3xl tw-font-bold">Rub el Hizb <%= hizb.hizb_number %></h1>
    <p class="tw-mt-2 tw-text-sm tw-text-gray-600">Total Ayahs:
      <strong>
        <%= hizb.verses_count %>
      </strong></p>
  </div>

  <div class="tw-bg-white tw-rounded-xl tw-shadow-sm tw-border tw-border-gray-200 tw-p-4 tw-mb-4">
    <h2 class="tw-text-lg tw-font-semibold tw-mb-2">Ayah Range</h2>
    <p><strong>From:</strong> <%= hizb.first_verse.chapter.name_simple %>, Ayah <%= hizb.first_verse.verse_number %></p>
    <p><strong>To:</strong> <%= hizb.last_verse.chapter.name_simple %>, Ayah <%= hizb.last_verse.verse_number %></p>
  </div>

  <div class="tw-bg-white tw-rounded-xl tw-shadow-sm tw-border tw-border-gray-200 tw-p-4">
    <h2 class="tw-text-lg tw-font-semibold tw-mb-4">Surahs in this Rub el Hizb</h2>
    <ul class="tw-divide-y tw-divide-gray-200">
      <% hizb.verse_mapping.each do |chapter_id, verses_range| %>
        <% chapter = Chapter.find(chapter_id) %>
        <li class="tw-py-2">
          <span class="tw-font-medium">Surah <%= chapter.name_simple %></span>: Ayahs <%= verses_range %>
        </li>
      <% end %>
    </ul>
  </div>
</div>