<%
  data = @presenter.graph_data
%>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="page-section tw-mt-4" data-turbo="false">
    <h1 class="tw-text-2xl tw-font-bold tw-mb-4">Detection Statistics Dashboard</h1>

    <%= form_with url: segments_dashboard_path, method: :get, class: "tw-flex tw-gap-4 tw-mb-6" do %>
      <div>
        <label class="tw-block tw-text-sm tw-font-semibold">Reciter:</label>
        <select name="reciter_id" class="tw-border tw-rounded tw-px-2 tw-py-1">
          <option value="">All</option>
          <% @presenter.reciters.each do |reciter| %>
            <option value="<%= reciter.id %>" <%= 'selected' if @presenter.selected_reciter == reciter.id %>><%= reciter.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label class="tw-block tw-text-sm tw-font-semibold">Surah:</label>
        <select name="surah" class="tw-border tw-rounded tw-px-2 tw-py-1">
          <option value="">All</option>
          <% @presenter.segmented_surah.each do |s| %>
            <option value="<%= s %>" <%= 'selected' if @presenter.selected_surah.to_s == s.to_s %>>Surah <%= s %></option>
          <% end %>
        </select>
      </div>

      <div class="tw-flex tw-items-end">
        <button type="submit" class="tw-px-4 tw-py-2 tw-rounded tw-font-medium tw-transition-colors tw-bg-blue-400 hover:tw-bg-blue-500 tw-text-white">Filter</button>
      </div>
    <% end %>

    <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-2 tw-gap-8">
      <div>
        <h2 class="tw-font-bold tw-mb-2">Detection Type Count</h2>
        <canvas id="detectionChart" height="250"></canvas>
      </div>

      <div>
        <h2 class="tw-font-bold tw-mb-2">Mistake Type Distribution</h2>
        <canvas id="mistakeChart" height="250"></canvas>
      </div>
    </div>

    <div class="tw-mt-8">
      <h2 class="tw-font-bold tw-mb-2">Reciters Stats</h2>
      <div class="tw-w-full">
        <canvas id="recitersChart" height="100"></canvas>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const detectionData = {
    labels: <%= raw data[:detections].keys.map(&:humanize).to_json %>,
    datasets: [{
      label: 'Count',
      data: <%= raw data[:detections].values.to_json %>,
      backgroundColor: 'rgba(37, 99, 235, 0.6)'
    }]
  };

  const mistakeData = {
    labels: <%= raw data[:mistake_types].keys.map(&:humanize).to_json %>,
    datasets: [{
      label: 'Mistakes',
      data: <%= raw data[:mistake_types].values.to_json %>,
      backgroundColor: 'rgba(220, 38, 38, 0.6)'
    }]
  };

  new Chart(document.getElementById('detectionChart'), {
    type: 'bar',
    data: detectionData,
    options: {
      responsive: true,
      plugins: {legend: {display: false}},
      scales: {
        y: {beginAtZero: true}
      }
    }
  });

  new Chart(document.getElementById('mistakeChart'), {
    type: 'bar',
    data: mistakeData,
    options: {
      responsive: true,
      plugins: {legend: {display: false}},
      scales: {
        y: {beginAtZero: true}
      }
    }
  });

  const reciterStats = <%= raw @presenter.reciter_stats.to_json %>;

  const reciterChartData = {
    labels: reciterStats.map(r => r.name),
    datasets: [
      {
        label: 'Positions',
        data: reciterStats.map(r => r.positions),
        backgroundColor: 'rgba(34, 197, 94, 0.6)' // green
      },
      {
        label: 'Failures',
        data: reciterStats.map(r => r.failures),
        backgroundColor: 'rgba(239, 68, 68, 0.6)' // red
      }
    ]
  };

  new Chart(document.getElementById('recitersChart'), {
    type: 'bar',
    data: reciterChartData,
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>

