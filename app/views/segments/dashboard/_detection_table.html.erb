<div class="page-wrapper container-lg mt-4">
  <div class="page-section filters">
    <%= form_with url: segments_detections_path, method: :get, local: true, class: "tw-flex tw-gap-4 tw-mb-6" do %>
      <div>
        <label class="tw-block tw-text-sm tw-font-semibold">Reciter:</label>
        <select name="reciter_id" class="tw-border tw-rounded tw-px-2 tw-py-1">
          <option value="">All</option>
          <% @presenter.reciters.each do |reciter| %>
            <option value="<%= reciter.id %>" <%= 'selected' if @presenter.selected_reciter == reciter.id %>><%= reciter.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label class="tw-block tw-text-sm tw-font-semibold">Surah:</label>
        <select name="surah" class="tw-border tw-rounded tw-px-2 tw-py-1">
          <option value="">All</option>
          <% @presenter.segmented_surah.each do |s| %>
            <option value="<%= s %>" <%= 'selected' if @presenter.selected_surah.to_s == s.to_s %>>Surah <%= s %></option>
          <% end %>
        </select>
      </div>

      <div class="tw-flex tw-items-end">
        <button type="submit" class="btn btn-info">Filter</button>
      </div>
    <% end %>
  </div>

  <div class="page-section mt-4">
    <h1 class="tw-text-xl tw-font-bold tw-mb-4">Detection Type Summary</h1>

    <table class="tw-w-full tw-border-collapse tw-rounded-md tw-shadow-sm">
      <thead>
      <tr class="tw-bg-gray-100 tw-text-left">
        <th class="tw-p-2 tw-border-b">Reciter</th>
        <th class="tw-p-2 tw-border-b">Surah</th>
        <th class="tw-p-2 tw-border-b">Type</th>
        <th class="tw-p-2 tw-border-b">Count</th>
      </tr>
      </thead>
      <tbody>
      <% @grouped_detections.each do |d| %>
        <tr class="tw-border-b hover:tw-bg-gray-50">
          <td class="tw-p-2"><%= d.reciter_name %></td>
          <td class="tw-p-2">Surah <%= d.surah_number %></td>
          <td class="tw-p-2"><%= d.detection_type %></td>
          <td class="tw-p-2"><%= d.total %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
