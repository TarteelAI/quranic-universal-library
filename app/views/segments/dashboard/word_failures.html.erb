<%= render 'segments/header' %>

<%
  summary = @presenter.word_failure_summary
  top_words = @presenter.top_problematic_words(100)
  reciter_breakdown = @presenter.reciter_word_failure_breakdown
%>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="tw-flex tw-flex-wrap tw-gap-4 tw-mt-4">
    <div class="tw-w-full md:tw-w-1/4">
      <div class="tw-bg-white tw-border tw-border-gray-200 tw-rounded-lg tw-shadow-sm tw-text-center">
        <div class="tw-p-6">
          <h3 class="tw-text-lg tw-font-semibold tw-mb-3 tw-text-blue-600"><%= summary[:total_failures] %></h3>
          <p class="tw-text-gray-700 tw-mb-4">Total Failures</p>
        </div>
      </div>
    </div>
    <div class="tw-w-full md:tw-w-1/4">
      <div class="tw-bg-white tw-border tw-border-gray-200 tw-rounded-lg tw-shadow-sm tw-text-center">
        <div class="tw-p-6">
          <h3 class="tw-text-lg tw-font-semibold tw-mb-3 tw-text-blue-500"><%= summary[:unique_words_with_failures] %></h3>
          <p class="tw-text-gray-700 tw-mb-4">Problematic Words</p>
        </div>
      </div>
    </div>
    <div class="tw-w-full md:tw-w-1/4">
      <div class="tw-bg-white tw-border tw-border-gray-200 tw-rounded-lg tw-shadow-sm tw-text-center">
        <div class="tw-p-6">
          <h3 class="tw-text-lg tw-font-semibold tw-mb-3 tw-text-yellow-600"><%= summary[:unique_reciters] %></h3>
          <p class="tw-text-gray-700 tw-mb-4">Unique Reciters</p>
        </div>
      </div>
    </div>
    <div class="tw-w-full md:tw-w-1/4">
      <div class="tw-bg-white tw-border tw-border-gray-200 tw-rounded-lg tw-shadow-sm tw-text-center">
        <div class="tw-p-6">
          <h3 class="tw-text-lg tw-font-semibold tw-mb-3 tw-text-green-600"><%= summary[:correction_rate] %>%</h3>
          <p class="tw-text-gray-700 tw-mb-4">Correction Rate</p>
        </div>
      </div>
    </div>
  </div>

  <div class="page-section filters tw-mt-4">
    <%= form_tag segments_word_failures_path, method: :get do %>
      <div class="tw-flex tw-flex-wrap">
        <div class="tw-mb-4 tw-me-2">
          <%= select_tag :surah, options_for_select(@presenter.chapter_options, @presenter.selected_surah), include_blank: true, class: 'form-select tw-w-[85vw] sm:tw-w-auto', id: 'chapter-select', data: { controller: 'select2' } %>
          <p class="tw-text-sm tw-text-gray-600 tw-mt-1">Filter by Surah</p>
        </div>

        <div class="tw-mb-4 tw-me-2">
          <%= select_tag :reciter, options_for_select(@presenter.reciters.pluck(:name, :id), @presenter.selected_reciter), include_blank: true, class: 'form-select tw-w-[85vw] sm:tw-w-[200px]', data: { controller: 'select2' } %>
          <p class="tw-text-sm tw-text-gray-600 tw-mt-1">Filter reciter</p>
        </div>

        <div class="tw-mb-4 tw-me-2">
          <%= search_field_tag :word_search, params[:word_search], class: 'tw-w-[85vw] sm:tw-w-[200px]', placeholder: 'Search words...' %>
          <p class="tw-text-sm tw-text-gray-600 tw-mt-1">Search words</p>
        </div>

        <div class="tw-mb-4">
          <%= submit_tag 'Filter', class: 'btn btn-success', data: { disable_with: 'Please wait..' } %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="page-section tw-mt-4">
    <h3 class="tw-text-xl tw-my-3">
      Failure words
    </h3>

    <div class="tools-table-overflow">
      <table class="tw-w-full tw-border-collapse tw-border tw-border-gray-300 hover:tw-bg-gray-50">
        <thead class="tw-position-sticky tw-bg-white tw-border-b tw-border-gray-300 top-0">
          <tr class="tw-bg-gray-100 tw-text-left">
            <th class="tw-p-2 tw-border-b">Rank</th>
            <th class="tw-p-2 tw-border-b">Word</th>
            <th class="tw-p-2 tw-border-b">Failure Count</th>
            <th class="tw-p-2 tw-border-b">Received Variants</th>
            <th class="tw-p-2 tw-border-b">Reciter IDs</th>
            <th class="tw-p-2 tw-border-b">Surahs</th>
            <th class="tw-p-2 tw-border-b">Failure Types</th>
            <th class="tw-p-2 tw-border-b">Corrected</th>
            <th class="tw-p-2 tw-border-b">Pending</th>
          </tr>
        </thead>

        <tbody>
          <% top_words.each_with_index do |word_data, index| %>
            <tr class="tw-border-b hover:tw-bg-gray-50">
              <td class="tw-p-2">
                <span class="badge tw-bg-blue-500"><%= index + 1 %></span>
              </td>
              <td class="tw-p-2">
                <span class="qpc-hafs">
                  <%= link_to word_data[:word], segments_word_failure_detail_path(text: word_data[:word]), target: '_blank' %>
                </span>
              </td>

              <td class="tw-p-2">
                <span class="badge tw-bg-red-500"><%= word_data[:fail_count] %></span>
              </td>

              <td class="tw-p-2">
                <div class="tw-max-w-xs">
                  <% word_data[:mistaken_variants].first(3).each do |variant| %>
                    <span class="qpc-hafs tw-mb-1">
                      <%= variant %>
                    </span>,
                  <% end %>

                  <% if word_data[:mistaken_variants].length > 3 %>
                    <br>
                    <span class="tw-text-xs tw-text-gray-500 tw-text-right">
                      +<%= word_data[:mistaken_variants].length - 3 %> more
                    </span>
                  <% end %>
                </div>
              </td>

              <td class="tw-p-2">
                <div class="tw-max-w-xs">
                  <% word_data[:reciter_ids].first(3).each do |reciter_id| %>
                    <span class="badge tw-bg-gray-600 tw-mr-1 tw-mb-1"><%= reciter_id %></span>
                  <% end %>

                  <% if word_data[:reciter_ids].length > 5 %>
                    <span class="tw-text-xs tw-text-gray-500">
                      +<%= word_data[:reciter_ids].length - 5 %> more
                    </span>
                  <% end %>
                </div>
              </td>

              <td class="tw-p-2">
                <div class="tw-max-w-xs">
                  <% word_data[:surahs].first(3).each do |reciter_id| %>
                    <span class="badge tw-bg-gray-600 tw-mr-1 tw-mb-1"><%= reciter_id %></span>
                  <% end %>

                  <% if word_data[:surahs].length > 5 %>
                    <span class="tw-text-xs tw-text-gray-500">
                      +<%= word_data[:surahs].length - 5 %> more
                    </span>
                  <% end %>
                </div>
              </td>

              <td class="tw-p-2">
                <% word_data[:mistake_types].each do |type| %>
                  <span class="badge tw-bg-yellow-500 tw-mr-1 tw-mb-1"><%= type %></span>
                <% end %>
              </td>

              <td class="tw-p-2">
                <span class="badge tw-bg-green-500"><%= word_data[:corrected_count] %></span>
              </td>

              <td class="tw-p-2">
                <span class="badge tw-bg-red-500"><%= word_data[:pending_count] %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="page-section tw-mt-4">
    <h3 class="tw-text-xl tw-my-3">Reciter Breakdown</h3>
    <div class="tw-flex tw-flex-wrap tw-gap-4">
      <% reciter_breakdown.each do |reciter_id, stats| %>
        <div class="tw-w-full md:tw-w-1/2 col-lg-4 tw-mb-3">
          <div class="tw-bg-white tw-border tw-border-gray-200 tw-rounded-lg tw-shadow-sm">
            <div class="tw-px-6 tw-py-4 tw-bg-gray-50 tw-border-b tw-border-gray-200 tw-rounded-t-lg">
              <h5 class="tw-text-lg tw-font-semibold tw-mb-3 mb-0">
                Reciter <%= reciter_id %>: <%= stats[:reciter_name] %>
              </h5>
            </div>
            <div class="tw-p-6">
              <p class="tw-text-gray-700 tw-mb-4">
                <strong>Total Failures:</strong> <%= stats[:total_failures] %><br>
                <strong>Problematic Words:</strong> <%= stats[:unique_problematic_words] %>
              </p>
              
              <% if stats[:top_words].any? %>
                <h6>Top Problematic Words:</h6>
                <ul class="list-unstyled">
                  <% stats[:top_words].each do |word_info| %>
                    <li class="tw-mb-2">
                      <span class="qpc-hafs tw-font-semibold"><%= word_info[:word] %></span>
                      <span class="badge tw-bg-red-500 tw-ml-2"><%= word_info[:count] %></span>
                      <br>
                      <small class="tw-text-gray-600">
                        Variants: <%= word_info[:variants].first(2).join(', ') %>
                        <% if word_info[:variants].length > 2 %>
                          +<%= word_info[:variants].length - 2 %> more
                        <% end %>
                      </small>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


