<meta charset="utf-8">
<meta
  content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no"
  name="viewport"
  />
<title>
  <%= content_for?(:title) ? yield(:title) : 'Quranic Universal Library' %>
</title>
<%= tag.meta name: "description", content: @description if @description.present? %>
<%= csrf_meta_tags %>
<script src="https://js.sentry-cdn.com/9c9baca096bbb40bba9c1e944694d76c.min.js" crossorigin="anonymous"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<meta property="og:image" content="https://static-cdn.tarteel.ai/qul/og.jpeg">
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content="Quranic Universal Library (QUL) logo alongside green abstract shapes on a black background. Text reads: 'The toolkit for Muslim Developers â€“ A comprehensive collection of Quranic digital resources.'" />
<%= yield :head %>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Sarina&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
<%= stylesheet_link_tag "bootstrap", "data-turbo-track": "reload" %>

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-7Y1R7RC8HG"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-7Y1R7RC8HG');

  // Trigger pageview on initial page load
  document.addEventListener('turbo:load', function(event) {
    gtag('event', 'page_view', {
      page_path: window.location.pathname,
      page_title: document.title
    });
  });

  // Handle frame-specific visits if using turbo-frames
  document.addEventListener('turbo:frame-load', function(event) {
    gtag('event', 'page_view', {
      page_path: window.location.pathname,
      page_title: document.title
    });
  });
</script>
