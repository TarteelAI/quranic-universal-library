<%= stylesheet_link_tag "bootstrap", "data-turbo-track": "reload" %>

<script>
  Sentry.onLoad(function() {
    Sentry.init({
      sampleRate: 0.5,
      environment: "<%= Rails.env %>"
    });
  });
</script>

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-57749XV2P9"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-57749XV2P9');

  // Trigger pageview on initial page load
  document.addEventListener('turbo:load', function(event) {
    gtag('event', 'page_view', {
      page_path: window.location.pathname,
      page_title: document.title
    });
  });

  // Handle frame-specific visits if using turbo-frames
  document.addEventListener('turbo:frame-load', function(event) {
    gtag('event', 'page_view', {
      page_path: window.location.pathname,
      page_title: document.title
    });
  });
</script>
