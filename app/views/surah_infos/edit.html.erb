<%= render 'tools/header',
           name: 'Surah Information',
           title: "Update #{@resource.name} For Surah #{@info.chapter.name_simple}",
           key: 'surah_info'
%>

<%= render 'shared/access_message' %>

<div class="page-wrapper container-lg">
  <div class="page-section">
    <%= form_with model: @info, url: surah_info_path(@info.chapter_id, resource_id: @resource.id), method: :put, html: { class: 'form formtastic', autocomplete: 'off', id: 'info-form' } do |form| %>
      <div class="form-group mb-3">
        <%= form.label :short_text, class: 'form-label h2' %>
        <%= form.text_area :short_text, class: 'form-control', row: 2 %>
      </div>

      <div class="form-group">
        <%= form.label :text, 'Surah Info text', class: 'form-label h2' %>
        <%= form.text_area :text, class: 'form-control', id: 'editor', required: true, autofocus: true, data: { controller: 'tinymce' } %>
      </div>

      <div class="form-group d-flex justify-content-end mt-3">
        <%= link_to 'Cancel', surah_info_path(@info.chapter_id, language: @info.language_id, resource_id: @resource.id), class: 'btn btn-default' %>
        <%= form.submit "Save Surah Info", class: 'btn btn-success', data: { disable_with: 'Please wait...' } %>
      </div>
    <% end %>
  </div>
</div>
