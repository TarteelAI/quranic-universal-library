<%
  actions = []

  if @access
    actions << link_to('Edit', edit_surah_info_path(@info.chapter_id, resource_id: @resource.id, language: @info.language_id), class: 'tw-px-3 tw-py-1.5 tw-text-sm tw-font-medium tw-bg-green-600 hover:tw-bg-green-700 tw-text-white tw-rounded tw-transition-colors')
    actions << link_to('Edit History', '#_', class: 'btn btn-info', data: { url: history_surah_info_path(@info.chapter_id, resource_id: @resource.id, language: @info.language_id), controller: "ajax-modal" })
  end

  if @info.chapter_id > 1
    actions << link_to('Previous Surah', surah_info_path(@info.chapter_id - 1, resource_id: @resource.id, language: @info.language_id), class: 'tw-px-4 tw-py-2 tw-text-sm tw-font-medium tw-bg-gray-800 hover:tw-bg-gray-900 tw-text-white tw-rounded tw-transition-colors')
  end

  if @info.chapter_id < 114
    actions << link_to('Next Surah', surah_info_path(@info.chapter_id + 1, resource_id: @resource.id, language: @info.language_id), class: 'tw-px-4 tw-py-2 tw-text-sm tw-font-medium tw-bg-gray-800 hover:tw-bg-gray-900 tw-text-white tw-rounded tw-transition-colors')
  end

  actions << link_to('Back to Index', surah_infos_path(language: @info.language_id), class: 'btn btn-info')
%>

<%= render 'tools/header',
           name: 'Surah Information',
           title: "#{@resource.name} For Surah #{@info.chapter.name_simple}",
           key: 'surah_info',
           actions: actions
%>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="page-section">
    <h2>Short text</h2>
    <div lang=<%= @language.iso_code %>>
      <%= @info.short_text.presence || 'N/A' %>
    </div>
  </div>

  <div class="page-section tw-tw-mt-4">
    <h2>Full Surah info</h2>
    <div lang=<%= @language.iso_code %>>
      <%= safe_html @info.text %>
    </div>
  </div>
</div>

