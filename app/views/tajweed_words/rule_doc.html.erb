<%
  sample_words = []
  tajweed = TajweedRules.new('new')
  rule = tajweed.documentation[(params[:rule].to_sym)]
%>

<%= render 'tools/header',
           name: "Tajweed rule",
           title: "Tajweed rule: <strong>#{rule[:name]}</strong>",
           help: false
%>

<%#= render 'shared/page_font', verses: [@word.verse] %>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="page-section page-section-card">
    <%= safe_html rule[:description] %>

    <h3 class="tajweed-new tw-mt-2 tw-mb-0">
      Rule Color:
      <span class="tajweed-rule-icon <%= params[:rule] %>"></span>
      <span class="qpc-hafs <%= params[:rule] %>">بِسۡمِ ٱللَّهِ</span>
    </h3>
    <h3 class="tajweed-new tw-mt-2 tw-mb-0">
      Rule Letters:
      <div class="qpc-hafs">
        <%= safe_html rule[:rule_letters] %>
      </div>
    </h3>
  </div>

  <% if rule[:rule_tip] %>
    <div class='tw-p-4 tw-mb-4 tw-bg-gray-800 tw-border tw-border-gray-700 tw-text-gray-100 tw-rounded'>
      <%= safe_html rule[:rule_tip] %>
    </div>
  <% end %>

  <div class="page-section page-section-card tw-mt-4">
    <h2>Sample words</h2>

    <table class="tw-w-full hover:tw-bg-gray-50">
      <thead class="tw-sticky tw-top-0 tw-z-10 tw-bg-white tw-border-b tw-border-gray-300">
      <tr>
        <th>Location</th>
        <th>Text</th>
      </tr>
      </thead>

      <tbody>
      </tbody>
    </table>

    <% if rule[:links].present? %>
      <p>
        For more detail about <%= rule[:name] %> please visit:
        <u>
          <% rule[:links].each do |link| %>
            <li>
              <%= link_to link, link, target: '_blank' %>
            </li>
          <% end %>
        </u>
      </p>
    <% end %>
  </div>
</div>
