<%
  translations = Translation.where(
    resource_content_id: @resource.id,
    page_number: verse.page_number
  ).order('verse_id ASC')
%>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="tw-flex tw-justify-center">
    <div>
      <% translations.each do |ayah_translation| %>
        <div class="tw-p-2">
          <div class="qpc-hafs">
            <%= ayah_translation.verse.text_qpc_hafs %>
          </div>

          <div class="tw-my-2">
            <%= safe_html ayah_translation.text %>
            <span class="tw-inline-flex tw-items-center tw-rounded-full tw-bg-green-500 tw-px-2 tw-py-0.5 tw-text-xs tw-font-semibold tw-text-white">
            <%= ayah_translation.verse_key %>
          </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>