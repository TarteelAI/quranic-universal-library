<div class="page-wrapper container-lg">
  <h1 class="page-header">Quran Word By Word Data Proofreading</h1>

  <p class="lead">
    Use filters to find ayah you're looking for.
  </p>

  <div class="page-section">
    <div class="filters row">
      <div class="col-lg-12">
        <%= form_tag wbw_texts_path, method: :get, class: 'd-flex' do %>
          <div class="form-group me-2">
            <%= select_tag :filter_juz, options_for_select(1..30, params[:filter_juz]), include_blank: true, class: 'form-select', data: {placeholder: 'Filter by para', controller: 'select2'} %>
            <p class="form-text">Filter by Para</p>
          </div>

          <div class="form-group me-2">
            <%= select_tag :filter_chapter, options_for_select(1..114, params[:filter_chapter]), include_blank: true, class: 'form-select', data: {placeholder: 'Filter by surah', controller: 'select2'} %>
            <p class="form-text">Filter by Surah</p>
          </div>

          <div class="form-group me-2">
            <%= select_tag :filter_verse, options_for_select(1..256, params[:filter_verse]), include_blank: true, class: 'form-select', data: {placeholder: 'Filter by surah', controller: 'select2'} %>
            <p class="form-text">Filter by Ayah</p>
          </div>

          <div class="form-check me-2">
            <%= check_box_tag :with_issues, class: 'form-check-input' %>
            <%= label_tag :with_issues, 'Filter ayah with issues', class: 'form-check-label' %>
          </div>

          <div class="form-group">
            <%= submit_tag 'Filter', class: 'btn btn-success', data: {disable_with: 'Please wait..'} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <figure class="highlight mt-4">
    <table class="table table-hover">
      <thead>
      <tr>
        <th><%= sort_order_link 'Ayah key', :verse_key %></th>
        <th>Progress</th>
        <th>Text</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @verses.each do |verse| %>
        <tr>
          <th scope="row"><%= verse.verse_key %></th>

          <%
            progress = 0
          %>
          <td>
            <div class="progress">
              <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="<%= progress %>" aria-valuemin="0" aria-valuemax="100" style="min-width: 1em;width: <%= progress %>%;">
                <%= progress %>%
              </div>
            </div>
          </td>

          <td class="indopak">
            <%= verse.text_indopak %>
          </td>

          <td>
            <%= link_to 'Show', wbw_text_path(verse.id, class: 'btn btn-success') %>
            <%= link_to 'Contribute', edit_wbw_text_path(verse.id), class: 'btn btn-success' %>
          </td>
        </tr>
      <% end %>

      <tr>
        <td colspan="4">
          <%= pagy_bootstrap_nav(@pagy).html_safe %>
        </td>
      </tr>
      </tbody>
    </table>
  </figure>
</div>
