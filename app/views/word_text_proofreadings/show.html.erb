<%
  actions = []
  if @verse.id > 1
    actions << link_to('Previous ayah', word_text_proofreading_path(@verse.id - 1), class: 'tw-px-4 tw-py-2 tw-rounded tw-font-medium tw-transition-colors tw-bg-gray-800 hover:tw-bg-gray-900 tw-text-white')
  end
  if @verse.id < 6236
    actions << link_to('Next ayah', word_text_proofreading_path(@verse.id + 1), class: 'tw-px-4 tw-py-2 tw-rounded tw-font-medium tw-transition-colors tw-bg-gray-800 hover:tw-bg-gray-900 tw-text-white')
  end
  actions << link_to('Back to filter', word_text_proofreadings_path, class: 'btn btn-outline-info tw-text-sm')
%>

<%= render 'tools/header',
           name: "Quran scripts",
           title: "#{@verse.chapter.name_simple} - #{@verse.verse_number}",
           key: 'quran_script',
           actions: actions
%>

<%= render 'shared/page_font', verses: [@verse] %>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="page-section">
    <div class="tw-flex tw-flex-wrap tw-gap-4">
      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>QPC Nastaleeq</b>
        <div class="qpc-nastaleeq quran-text" style="margin-top: 10px">
          <%= @verse.text_qpc_nastaleeq_hafs %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Madinah Nastaleeq</b>
        <div class="indopak-nastaleeq quran-text" style="margin-top: 10px"><%= @verse.text_qpc_nastaleeq %> </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Indopak Nastaleeq</b>

        <div class="indopak-nastaleeq quran-text" style="margin-top: 10px">
          <%= @verse.text_indopak_nastaleeq %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Indopak</b>

        <div class="indopak quran-text" style="margin-top: 10px">
          <%= @verse.text_indopak %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Uthmani</b>

        <div class="me_quran quran-text" style="margin-top: 10px">
          <%= @verse.text_uthmani %>
        </div>
      </div>


      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Uthmani Simple</b>

        <div class="me_quran quran-text" style="margin-top: 10px">
          <%= @verse.text_uthmani_simple %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Imlaei</b>

        <div class="me_quran quran-text" style="margin-top: 10px">
          <%= @verse.text_imlaei %>
        </div>
      </div>


      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Imlaei Simple</b>

        <div class="me_quran quran-text" style="margin-top: 10px">
          <%= @verse.text_imlaei_simple %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Imlaei Simple(new)</b>

        <div class="me_quran quran-text" style="margin-top: 10px">
          <% @verse.words.each do |w| %>
            <%= w.text_imlaei_simple %>
          <% end %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Digital Khatt</b>

        <div class="quran-text digitalkhatt" style="margin-top: 10px">
          <%= @verse.text_digital_khatt %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Digital Khatt v1</b>

        <div class="quran-text digitalkhatt" style="margin-top: 10px">
          <%= @verse.text_digital_khatt_v1 %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Digital Khatt Indopak</b>

        <div class="quran-text digitalkhatt-indopak" style="margin-top: 10px">
          <%= @verse.text_digital_khatt_indopak %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>KFGQPC Uthmani Hafs</b>
        <div class="qpc-hafs quran-text" style="margin-top: 10px"><%= @verse.text_qpc_hafs %></div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>KFGQPC Uthmani Hafs(tajweed)</b>
        <div class="qpc-hafs quran-text" style="margin-top: 10px"><%= @verse.text_uthmani_tajweed.to_s.html_safe %></div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>V4 Tajweed</b>
        <div class="quran-text p<%= @verse.v2_page %>-v4-tajweed"
             style="margin-top: 10px"
             data-controller="tajweed-font"
        >
          <%= @verse.code_v2 %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>V1</b>
        <div class="quran-text p<%= @verse.page_number %>-v1" style="margin-top: 10px"><%= @verse.code_v1 %></div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>V2</b>
        <div class="quran-text p<%= @verse.v2_page %>-v2" style="margin-top: 10px"><%= @verse.code_v2 %></div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>Image</b>
        <div style="margin-top: 10px" class="quran-text">
          <img data-src="<%= @verse.image_url %>" data-controller="lazy-load"/>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>WBW SVG</b>
        <div style="margin-top: 10px" class="quran-text tw-flex">
          <% @verse.words.order('position asc').each do |word| %>
            <img data-src="<%= word.tajweed_svg_url %>" data-controller="lazy-load" style="max-height: 100px"/>
          <% end %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>WBW Tajweed v4 Images</b>
        <div style="margin-top: 10px" class="quran-text tw-flex">
          <% @verse.words.order('position asc').each do |word| %>
            <img data-src="<%= word.tajweed_v4_image_url %>" data-controller="lazy-load" style="max-height: 100px"/>
          <% end %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>WBW Corpus Images</b>
        <div style="margin-top: 10px" class="quran-text tw-flex">
          <% @verse.words.order('position asc').each do |word| %>
            <img data-src="<%= word.corpus_image_url %>" data-controller="lazy-load" style="max-height: 100px; margin-right: 10px"/>
          <% end %>
        </div>
      </div>

      <div class="tw-w-full section pb-3 tw-border-b tw-border-gray-300">
        <b>WBW Tajweed(OLD) Images</b>
        <div style="margin-top: 10px" class="quran-text tw-flex">
          <% @verse.words.order('position asc').each do |word| %>
            <img data-src="<%= word.rq_tajweed_image_url %>" data-controller="lazy-load" style="max-height: 100px;"/>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div data-controller="mushaf-page" class="mushaf-wrapper page-section tw-tw-mb-3 tw-tw-mt-4">
    <h2>Words</h2>
    <div style="width: 100%;margin: 0 5px;text-align: center;direction: ltr;font-size: 20px">
      Font size:
      <input type="range" min="15" max="100" value="30" class="font-size-slider">
    </div>

    <div style="max-height: 500px;overflow-y: auto;">
      <table class="tw-w-full hover:tw-bg-gray-50 tw-tw-mt-4 tw-relative">
        <thead class="tw-sticky tw-top-0 tw-z-10 tw-bg-white tw-border-b-2 tw-border-black">
        <tr>
          <td>ID</td>
          <td style="direction: rtl">IndoPak</td>
          <td style="direction: rtl">Indopak Nastaleeq</td>
          <td style="direction: rtl">Madinah Nastaleeq</td>
          <td style="direction: rtl">QPC Nastaleeq</td>
          <td>Digitak Khatt indopak</td>

          <td style="direction: rtl">Uthmani</td>
          <td style="direction: rtl">Uthmani Simple</td>
          <td style="direction: rtl">Digital Khatt v1</td>
          <td style="direction: rtl">V1</td>

          <td style="direction: rtl">Digital Khatt v2</td>
          <td style="direction: rtl">Imlaei</td>
          <td style="direction: rtl">Imlaei Simple</td>
          <td style="direction: rtl">KFGQPC Hafs</td>
          <td style="direction: rtl;">KFGQPC Hafs tajweed</td>
          <td style="direction: rtl">V4 Tajweed</td>

          <td style="direction: rtl">V2</td>
        </tr>
        </thead>
        <tbody>
        <% @verse.words.order('position asc').each do |word| %>
          <tr class="hover:tw-bg-gray-200 tw-border-b quran-text">
            <td class="tw-py-2 tw-pl-2">
              <%= link_to( word.location, [:cms, word], target: '_blank') %>
            </td>

            <td class="tw-py-2 indopak char">
              <%= word.text_indopak %>
            </td>

            <td class="tw-py-2 indopak-nastaleeq char">
              <%= word.text_indopak_nastaleeq %>
            </td>

            <td class="tw-py-2 indopak-nastaleeq char">
              <%= word.text_qpc_nastaleeq %>
            </td>

            <td class="tw-py-2 qpc-nastaleeq char">
              <%= word.text_qpc_nastaleeq_hafs %>
            </td>

            <td class="tw-py-2 digitalkhatt-indopak char">
              <%= word.text_digital_khatt_indopak %>
            </td>
            <td class="tw-py-2 me_quran char">
              <%= word.text_uthmani %>
            </td>
            <td class="tw-py-2 me_quran char">
              <%= word.text_uthmani_simple %>
            </td>
            <td class="tw-py-2 digitalkhatt char">
              <%= word.text_digital_khatt_v1 %>
            </td>

            <td class="tw-py-2 p<%= word.page_number %>-v1 char">
              <%= word.code_v1 %>
            </td>

            <td class="tw-py-2 digitalkhatt char">
              <%= word.text_digital_khatt %>
            </td>

            <td class="tw-py-2 me_quran char">
              <%= word.text_imlaei %>
            </td>

            <td class="tw-py-2 me_quran char">
              <%= word.text_imlaei_simple %>
            </td>

            <td class="tw-py-2 qpc-hafs char">
              <%= word.text_qpc_hafs %>
            </td>

            <td class="tw-py-2 qpc-hafs char">
              <%= word.text_uthmani_tajweed.to_s.html_safe %>
            </td>

            <td class="tw-py-2 p<%= @verse.v2_page %>-v4-tajweed char">
              <%= word.code_v2 %>
            </td>


            <td class="tw-py-2 p<%= word.v2_page %>-v2 char">
              <%= word.code_v2 %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>

  <div class="tw-flex tw-justify-end tw-gap-2">
     <%= link_to( 'Previous ayah', word_text_proofreading_path(@verse.id - 1), class: 'tw-px-4 tw-py-2 tw-rounded tw-font-medium tw-transition-colors tw-bg-gray-800 hover:tw-bg-gray-900 tw-text-white') if @verse.id > 1 %>
     <%= link_to( 'Next ayah', word_text_proofreading_path(@verse.id + 1), class: 'tw-px-4 tw-py-2 tw-rounded tw-font-medium tw-transition-colors tw-bg-gray-800 hover:tw-bg-gray-900 tw-text-white') if @verse.id < 6236 %>
     <%= link_to( 'Back to filter', word_text_proofreadings_path, class: 'btn btn-outline-info tw-text-sm') %>
  </div>
</div>

<script>
  addEventListener('click', e => {
    const node = e.target;
    navigator.clipboard.writeText(node.textContent);
  }, false);
</script>
