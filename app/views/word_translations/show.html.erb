<%
  actions = []
  next_ayah = @verse.next_ayah
  previous_ayah = @verse.previous_ayah

  if @access
    actions << link_to('Edit', new_word_translation_path(ayah: @verse.id, language: params[:language]), class: 'tw-bg-green-500 hover:tw-bg-green-600 tw-text-white tw-px-4 tw-py-2 tw-rounded tw-transition-colors')
  end

  if previous_ayah
    actions << link_to('Previous ayah', word_translation_path(previous_ayah.id, language: params[:language]), class: 'tw-bg-gray-800 hover:tw-bg-gray-900 tw-text-white tw-px-4 tw-py-2 tw-rounded tw-transition-colors')
  end

  if next_ayah
    actions << link_to('Next ayah', word_translation_path(next_ayah.id, language: params[:language]), class: 'tw-bg-gray-800 hover:tw-bg-gray-900 tw-text-white tw-px-4 tw-py-2 tw-rounded tw-transition-colors')
  end

  actions << link_to('Back to filter', word_translations_path(language: params[:language]), class: 'tw-bg-blue-500 hover:tw-bg-blue-600 tw-text-white tw-px-4 tw-py-2 tw-rounded tw-transition-colors')
%>

<%= render 'tools/header',
           name: "Word translation proofreading",
           title: "#{@language.name} word-by-word translation for #{@verse.chapter.name_simple} ayah #{@verse.verse_number}",
           key: 'word_translation',
           actions: actions
%>

<div class="page-wrapper tw-container tw-max-w-7xl tw-mx-auto tw-px-4">
  <div class="page-section tw-mb-4">
    <div class="tw-bg-blue-100 tw-border tw-border-blue-400 tw-text-blue-700 tw-px-4 tw-py-3 tw-rounded tw-mb-4" role="alert">
      <div>
        <b>Text Uthmani:</b>
        <div class="qpc-hafs"> <%= @verse.text_qpc_hafs %></div>
      </div>

      <% @verse.translations.each do |trans| %>
        <div>
          <b><%= trans.resource_name %>:</b> <br/>

          <div class="<%= trans.language_name %>">
            <%= safe_html trans.text %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="tw-text-xl tw-mb-4">
      <%
        progress = @verse.word_translation_progress(@language.id)
      %>

      Translation progress
      <div class="tw-w-full tw-bg-gray-200 tw-rounded-full tw-h-6 tw-mt-2">
        <div class="tw-bg-green-500 tw-h-6 tw-rounded-full tw-text-white tw-text-xs tw-flex tw-items-center tw-justify-center tw-transition-all tw-duration-300" role="progressbar" aria-valuenow="<%= progress %>" aria-valuemin="0" aria-valuemax="100" style="min-width: 1em;width: <%= progress%>%;">
          <%= progress %>%
        </div>
      </div>
    </div>
  </div>

  <div class="page-section">
    <h2>Word list with translation</h2>
    <%= render 'table' %>
  </div>
</div>
